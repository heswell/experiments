  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Viewserver",
      "runtimeArgs": [
        "--experimental-modules"
      ],
      "env": {
        "NODE_ENV": "development"
      },      
      "sourceMaps": true,
      "program": "${workspaceFolder}/scripts/run-viewserver.mjs",
      "cwd": "${workspaceRoot}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest Tests",
      "args":[ 
        "${workspaceRoot}/packages/data-store/node_modules/.bin/jest",
        "--",
        "./group-rowset.spec"
      ],
      "cwd": "${workspaceRoot}/packages/data-store"
  },
  ]
}