{
  "name": "root",
  "private": true,
  "scripts": {
    "build": "yarn build:data && yarn build:viewserver && yarn build:server",
    "build:data": "cd packages/data && yarn build",
    "build:viewserver": "cd packages/viewserver && yarn build",
    "build:server": "cd packages/server-core && yarn build",
    "type-defs": "yarn type-defs:data && yarn type-defs:viewserver && yarn type-defs:server",
    "type-defs:data": "cd packages/data && yarn type-defs",
    "type-defs:viewserver": "cd packages/viewserver && yarn type-defs",
    "type-defs:core": "cd packages/server-core && yarn type-defs",
    "typecheck": "tsc --noEmit",
    "viewserver": "node scripts/run-viewserver.mjs"
  },
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/node": "^17.0.23",
    "esbuild": "^0.15.5",
    "esbuild-node-tsc": "^2.0.2",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4"
  }
}
